modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simulation1"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simulation2"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LargeSimulation"

[[workflows.workflow]]
name = "Simulation1"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --simulation --planet-count 2 --nodes-per-planet 2 --operation-rate 0.5 --duration 3600 --port 5000 --node-port 7000"
waitForPort = 5000

[[workflows.workflow]]
name = "Simulation2"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --simulation --planet-count 2 --nodes-per-planet 2 --operation-rate 0.5 --duration 3600 --port 5001 --node-port 9000"
waitForPort = 5001

[[workflows.workflow]]
name = "LargeSimulation"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --simulation --planet-count 3 --nodes-per-planet 3 --operation-rate 0.5 --duration 3600 --port 5002 --node-port 8000"
waitForPort = 5002

[deployment]
run = ["sh", "-c", "python main.py --simulation --planet-count 3 --nodes-per-planet 2 --operation-rate 0.5 --duration 3600 --node-port 7000"]

